@model Bookish.Models.Book 

@{
    ViewData["Title"] = "CatalogManagement";
}
<h1>@ViewData["Title"]</h1>

<h2>Add a new book to the library</h2>
@using (Html.BeginForm("CatalogManagement", "Home", FormMethod.Post))
{   
    <label for="bookTitle" style="display: block";>Book Title:</label>
    <input type="text" id="bookTitle" name="bookTitle" required>
    <label for="author" style="display: block";>Author:</label>
    <input type="text" id="author" name="author" required>
    <label for="copies" style="display: block";>Number of copies</label>
    <input type="number" id="copies" name="copies" required><br><br>
    <input type="submit" value="Submit" class="btn btn-dark" style="display: block"; />
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}


